{
    "name": "alto/bezier",
    "description": "Precision PHP toolkit for evaluating, splitting, and measuring quadratic, cubic, quintic and N-order Bezier curves",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "bezier",
        "bezier-curve",
        "curve",
        "geometry",
        "computational-geometry",
        "graphics",
        "svg",
        "math",
        "quadratic",
        "cubic",
        "curve-splitting",
        "curve-evaluation"
    ],
    "authors": [
        {
            "name": "Simon AndrÃ©",
            "email": "smn.andre@gmail.com"
        }
    ],
    "homepage": "https://github.com/phpalto/bezier",
    "support": {
        "issues": "https://github.com/phpalto/bezier/issues",
        "docs": "https://github.com/phpalto/bezier#readme"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/smnandre"
        }
    ],
    "require": {
        "php": ">=8.3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "Alto\\Bezier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alto\\Bezier\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix",
        "qa": [
            "@cs",
            "@sa",
            "@test"
        ],
        "sa": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit"
    }
}
